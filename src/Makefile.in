DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

IS_COMPONENT = 1
MODULE = halreftest
LIBRARY_NAME =  halreftest_s
SHORT_LIBNAME	= halreftest_s
USE_STATIC_LIBS = 1

XPI_NAME = halreftest

REQUIRES		= xpcom \
		string \
		$(NULL)

CPPSRCS		= \
		nsSystemInfoModule.cpp \
		$(NULL)

ifeq ($(MOZ_WIDGET_TOOLKIT),cocoa)
CMMSRCS    = nsSystemInfoMac.mm
else
ifeq ($(MOZ_WIDGET_TOOLKIT),windows)
CPPSRCS	  += nsSystemInfoWin.cpp
else
ifeq ($(MOZ_WIDGET_TOOLKIT),gtk2)
CPPSRCS   += nsSystemInfoLinux.cpp
else
CPPSRCS   += nsSystemInfo.cpp
endif # gtk2
endif # windows
endif # mac

include $(topsrcdir)/config/rules.mk

EXTRA_DSO_LDOPTS += \
  $(XPCOM_GLUE_LDOPTS) \
  $(NSPR_LIBS) \
  $(NULL)

ifeq ($(MOZ_WIDGET_TOOLKIT),cocoa)
EXTRA_DSO_LDOPTS += \
		-framework Carbon \
		-framework IOKit
else
ifeq ($(MOZ_WIDGET_TOOLKIT),gtk2)
EXTRA_DSO_LDOPTS +=  \
    /usr/lib/libpci.a \
    -lresolv \
    /usr/lib/libGL.a \
    -lX11 \
    -lXext \
    -lz
endif #gtk2
endif #mac

